{
	"defaultSeverity": "warning",
	"extends": [
		"stylelint-config-standard"
	],
	"rules": {
		"indentation": [
			"tab"
		],
		"media-feature-name-no-vendor-prefix": [
			true,
			{
				"severity": "error"
			}
		],
		"property-no-vendor-prefix": [
			true,
			{
				"severity": "error"
			}
		],
		"selector-no-vendor-prefix": [
			true,
			{
				"severity": "error"
			}
		],
		"value-no-vendor-prefix": [
			true,
			{
				"severity": "error"
			}
		]
	}
}

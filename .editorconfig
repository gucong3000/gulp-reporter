# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.{cmd,bat}]
end_of_line = crlf

[*.md]
tab_width = 2

[{package.json,*.yml}]
indent_style = space
indent_size = 2

[lib/*.json]
insert_final_newline = false
